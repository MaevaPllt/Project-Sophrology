{% extends 'layout_admin.html.twig' %}

{% block stylesheets %}
    {{ encore_entry_link_tags('account') }}
{% endblock %}

{% block title %}Espace Administrateur| {{ parent() }}{% endblock %}

{% block body %}
    <section class="bg-secondary my-5 p-5 ">
        <h1 class="text-center pb-4 text-white text-uppercase">Tableau de bord de
            <strong>{{ app.user.firstname }} {{ app.user.lastname }}</strong>
            <hr class="w-25 bg-info">
        </h1>
        <div class="container bg-primary border mb-4">
            <h2 class="my-3 ">Les comptes-rendus - <strong>Index</strong></h2>
            <a class="btn btn-light mb-2" href="{{ path('admin_repport_new') }}">
                <img width="20em" height="20em" src="{{ asset('build/images/plus.svg') }}" alt="logo-plus-ajouter"/>
                Écrire un nouveau compte-rendu</a>

            <table class="table">
                <thead class="">
                <tr class="">
                    <th>Numéro</th>
                    <th>Date</th>
                    <th>Contenu</th>
                    <th>État</th>
                </tr>
                </thead>
                <tbody>
                {% for repport in repports %}
                    <tr class="">
                        <td class="font-weight-bold">{{ repport.id }}</td>
                        <td>{{ repport.date }}</td>
                        <td>{{ repport.message|raw }}</td>
                        <td>
                            <a class="btn btn-outline-success ml-2"
                               href="{{ path('admin_repport_edit', {'id': repport.id}) }}">
                                <img width="25em" height="30em"
                                     src="{{ asset('build/images/pencil.svg') }}" alt="logo-crayon-modifier" title="Modifier"/>
                                <span>{{ include('admin_repport/_delete_form.html.twig') }}</span>
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6">Vous n'avez pas de compte-rendu d'enregistré pour le moment</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <div class="my-2">
                <a class="btn btn-light border-secondary" href="{{ path("admin_home") }}">
                    Retour au tableau de bord
                </a>
            </div>
        </div>
    </section>
    {% include '_includes/_arrow_up.html.twig' %}
{% endblock %}
