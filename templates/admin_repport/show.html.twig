{% extends 'layout.html.twig' %}

{% block stylesheets %}
    {{ encore_entry_link_tags('account') }}
{% endblock %}

{% block title %}Espace Administrateur| {{ parent() }}{% endblock %}


{% block body %}
    <section class="bg-secondary my-5 p-5 ">
        <h1 class="text-center pb-4 text-white text-uppercase">Tableau de bord de
            <strong>{{ app.user.firstname }} {{ app.user.lastname }}</strong>
            <hr class="w-25 bg-info">
        </h1>
        <div class="container bg-primary border mb-4">
            <h2 class="my-3">Compte-rendu après séance n°{{ repport.number }} de <strong class="text-uppercase">
                    {{ repport.patient.lastname }} {{ repport.patient.firstname }}</strong></h2>
            <div class="bg-light p-2 border">
                {{ repport.message|raw }}
            </div>
            <div >
                <td class="mt-2 d-flex justify-content-end">
                    <a class="btn btn-outline-success"
                       href="{{ path('admin_repport_edit', {'id': repport.id}) }}">
                        <img width="25em" height="30em"
                             src="{{ asset('build/images/pencil.svg') }}" alt="logo-crayon-modifier"
                             title="Modifier"/>
                        <span>{{ include('admin_repport/_delete_form.html.twig') }}</span>
                    </a>
                </td>
            </div>
            <a class="btn btn-light border-secondary my-2" href="{{ path('admin_repport_index') }}">Retour à l'index</a>
        </div>
    </section>
    {% include '_includes/_arrow_up.html.twig' %}
{% endblock %}
