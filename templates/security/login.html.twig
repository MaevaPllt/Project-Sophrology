{% block stylesheets %}
    {{ encore_entry_link_tags('login') }}
{% endblock %}

{% block body %}
    <body class="bg-secondary my-5 py-5">
    <h1 class="text-uppercase text-light mb-3 d-flex justify-content-center">Espace connexion</h1>
    <div class="row justify-content-center mx-0 mx-2 my-5">
        <div class="col-lg-3 m-4 p-2 bg-primary border">
            <div class="d-flex justify-content-center">
                <img class=" logo" src="{{ asset('build/images/logo.png') }}"/>
            </div>
            <div class="card-body">
                <form method="post">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    {% if app.user %}
                        <div class="mb-3">
                            Vous êtes déjà connecté en tant que {{ app.user.username }}, <a
                                    href="{{ path('app_logout') }}">Se
                                déconnecter</a>
                        </div>
                    {% endif %}
                    <h3 class=" mb-3">Se connecter à votre espace</h3>
                    <label for="inputEmail">Entrez votre adresse Email</label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail"
                           class="form-control" required
                           autofocus>
                    <label for="inputPassword">Entrez votre Mot de passe</label>
                    <input type="password" name="password" id="inputPassword" class="form-control" required>

                    <input type="hidden" name="_csrf_token"
                           value="{{ csrf_token('authenticate') }}"
                    >

                    {#
                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                    See https://symfony.com/doc/current/security/remember_me.html

                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" name="_remember_me"> Remember me
                        </label>
                    </div>
                    #}
                    <div class="d-flex justify-content-end mt-4">
                        <button class="btn btn-light border-secondary" type="submit">
                            Se connecter
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="row justify-content-center my-2">
        <a class="text-white" href=""> Mot de passe oublié ?</a>
    </div>
    <div class="row justify-content-center">
        <a href="{{ path('home') }}" class="btn btn-light border-secondary">Retour au site</a>
    </div>

    </body>
{% endblock %}
